<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhangjq0908.iradio">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:label="悦听"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.iRadio">

        <!-- Web 页面 -->
        <activity
            android:name=".WebViewActivity"
            android:launchMode="singleTask"
            android:exported="false" />

        <activity
            android:name=".PodcastActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity
            android:name=".YTListActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 主页面 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ExoPlayer 播放服务 -->
        <service
            android:name=".PlayerService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false" />

        <!-- WebView 播放音频的前台服务 -->
        <service
            android:name=".WebViewPlaybackService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false" />

        <!-- ★★★★★ 以下为动态 receiver 的安全声明（必须）★★★★★ -->
        <!-- 用于 NOW_PLAYING_UPDATE / 播放信息同步 -->
        <receiver
            android:name=".NowPlayingReceiver"
            android:exported="false" />

        <!-- 用于来电停止播放（PhoneStateReceiver） -->
        <receiver
            android:name=".PhoneStateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
